{
	"name": "diffuse-dev",
	"image": "gcc:latest",
	"remoteUser": "${localEnv:USER}",
	"mounts": [
		"source=/home/${localEnv:USER}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind,readonly"
	],
	"onCreateCommand": "/bin/bash .devcontainer/install_rvv_crosscompiler.sh",
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}/.rave/build/llvm-cross/llvm-EPI-development-toolchain-cross/bin",
		"VSCODEDIR": "${containerWorkspaceFolder}"
	},
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"toolsToInstall": "flake8,autopep8,black,yapf,mypy,pydocstyle,pycodestyle,bandit,pipenv,virtualenv,pytest,pylint,cmakelang"
		},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true
		},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers-community/features/llvm:3": {},
		"ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
			"packages": [
				"libopenblas-dev",
				"cmake",
				"ninja-build",
				"gdb",
				"papi-tools"
			]
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"cheshirekow.cmake-format",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cmake-tools"
			],
			"settings": {
				"clangd.path": "/usr/bin/clangd",
				"git.ignoredRepositories": [
					".rave"
				]
			}
		}
	}
}